generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model user {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String   @unique
  username String   @unique
  password String
  avatar   String?
  role     RoleType @default(staff)
}

model Product {
  id          String          @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  category    ProductCategory @default(other)
  price       Float
  stock       Int
  imageUrl    String
  sales Sale[]
}

model Sale{
  id          String          @id @default(auto()) @map("_id") @db.ObjectId
  productId String @db.ObjectId
  quantity Int @default(1)
  createdAt DateTime @default(now())
  product Product @relation(fields: [productId],references: [id])
}

enum RoleType {
  admin
  staff
  manager
}

enum ProductCategory {
  electronics
  beauty
  food
  decoration
  accessories
  clothing
  furniture
  other
}
